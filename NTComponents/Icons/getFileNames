#!/bin/bash

echo "public extension Icon {" >> iOS\ Icons.swift
echo "public struct iOS {" >> iOS\ Icons.swift
for categoryFolder in 50/*/; do

	folder=${categoryFolder#*/}
	folder=${folder%"/"}
	echo "public struct $folder {" >> iOS\ Icons.swift
	for fileName in "$categoryFolder"*.png; do
		name=${fileName#$categoryFolder}
		extension="-50.png"
		noExtenion=${name%$extension}
		noSpaces=${noExtenion//-/_}
		echo "public static let ${noSpaces} = Icon.icon(\"$name\")" >> iOS\ Icons.swift
	done
	echo "}" >> iOS\ Icons.swift
done 
echo "}" >> iOS\ Icons.swift
echo "}" >> iOS\ Icons.swift
